{
	"name": "balanced-pairs",
	"main": "balanced-pairs",
	"version": "1.1.2",
	"description": "üèÑ  get blocks of balanced pairs, eg: {} \\<a>\\</a> or code fences ```",
	"license": "MIT",
	"repository": "F1LT3R/balanced-pairs",
	"author": {
		"name": "F1LT3R",
		"email": "al@pwn.io",
		"url": "f1lt3r.io"
	},
	"scripts": {
		"test": "xo && npm run cover",
		"unit": "ava",
		"watch": "ava --watch",
		"cover": "nyc --reporter=lcov --reporter=html --reporter=text ava *.test.js",
		"coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls -v"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm test"
		}
	},
	"files": [
		"index.js"
	],
	"keywords": [
		"balance",
		"match",
		"pairs",
		"even",
		"tree",
		"flatten",
		"depth",
		"body",
		"pre",
		"post",
		"uneven",
		"parse",
		"delimiters",
		"code fence",
		"tags",
		"braces",
		"blocks"
	],
	"dependencies": {
		"point-in-polygon": "^1.0.1",
		"super-split": "^1.1.0"
	},
	"devDependencies": {
		"ava": "^0.25.0",
		"chromafi": "^2.1.0",
		"coveralls": "^3.0.0",
		"husky": "^0.14.3",
		"nyc": "^11.7.1",
		"xo": "^0.20.3"
	},
	"nyc": {
		"reporter": [
			"lcov",
			"text"
		]
	},
	"xo": {
		"esnext": true,
		"semicolon": false,
		"globals": [
			"__dirname"
		],
		"rules": {
			"no-console": 1,
			"space-before-function-paren": 0
		}
	},
	"ava": {
		"failFast": true
	}
}
